{
  "name": "ipc-rpc",
  "version": "1.0.0",
  "description": "A simple protocol for RPC via IPC over sockets",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "tsc && node lib/example.js",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "prepare" : "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianhopebailie.com/ipc-rpc.git"
  },
  "keywords": [
    "ipc",
    "rpc",
    "typescript"
  ],
  "author": {
    "name": "Adrian Hope-Bailie",
    "email": "adrian@hopebailie.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adrianhopebailie.com/ipc-rpc/issues"
  },
  "homepage": "https://github.com/adrianhopebailie.com/ipc-rpc#readme",
  "dependencies": {
    "@types/debug": "0.0.30",
    "@types/through2": "^2.0.33",
    "debug": "^3.1.0",
    "riverpig": "^1.1.4",
    "through2": "^2.0.3",
    "typescript": "^2.9.2"
  },
  "files": [
    "./bin/*",
    "./lib/*"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0"
  }
}
